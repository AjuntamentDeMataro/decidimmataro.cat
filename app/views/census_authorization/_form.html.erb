<div class="field">
  <%= form.text_field :document_number %>
</div>

<div class="field">
  <%= form.text_field :date_of_birth %>
</div>

<div class="field">
  <%= form.collection_select :scope_id, current_organization.scopes.select {|scope| scope.name["ca"] != "Ciutat" }, :id, ->(scope){ translated_attribute(scope.name) }, prompt: t(".scope_prompt") %>
</div>

<div class="field">
  <%= form.radio_button :gender, "male", label: t(".male") %>
  <%= form.radio_button :gender, "female", label: t(".female") %>
</div>

<%= form.hidden_field :handler_name %>

<div class="actions">
  <%= form.submit t("authorize", scope: "decidim.authorizations.new"), class: "button expanded" %>
</div>
